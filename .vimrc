" Indention Options
set autoindent
set expandtab
set shiftround
set shiftwidth=2
set smarttab
set tabstop=2
set ruler
set hlsearch
set ai

" Search Options
set ignorecase
set smartcase

" Performance Options
set lazyredraw

" Text Rendering Options
set encoding=utf-8
set wrap
syntax on

" User Interface Options
set number
set noerrorbells
set mouse=a
set title
set background=dark

" Code Folding Options
" set foldmethod=indent

" Miscellaneous Options
set autoread
" set spell
set backupdir=~/.cache/vim
set dir=~/.cache/vim
set confirm
set history=1000
set noswapfile
set nrformats-=octal

" Theme
colorscheme peachpuff
highlight Comment ctermfg=green
